<Window x:Class="MeuAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Principal" Height="300" Width="400"
        Background="#f0f4f8" FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Texto de boas-vindas -->
        <TextBlock Text="Escolha uma funcionalidade:"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20" />

        <!-- Botões de navegação -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Conversor Binário para Decimal"
                    Width="250"
                    Height="50"
                    Margin="0,0,0,10"
                    Click="OpenBinaryConverter_Click"
                    Background="#4CAF50" Foreground="White" Cursor="Hand" />

            <Button Content="Calculadora"
                    Width="250"
                    Height="50"
                    Margin="0"
                    Click="OpenCalculator_Click"
                    Background="#2196F3" Foreground="White" Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>
